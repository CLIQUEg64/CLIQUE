	<body>
		<header>
			<div class="row double-padded align-center">
				<a href="/"><img src="images/clique-logo-horizontal.png"></a>
			</div>
		</header>
		<main>
			<div class="row">
				<div class="one half padded">
				<h2 class="login">Create Your Account Now</h2>
				<form action="/homepage" method="post">
					<fieldset class="center">
						<input type="email" name="email" placeholder="Email">
						<input type="text" name="company" placeholder="Company">
						<input type="text" name="name" placeholder="Name">
						<input type="text" name="position" placeholder="Position">
						<input type="text" name="skills" placeholder="Skills">
						<button>Create An Account</button>
					</fieldset>
				</form>
				</div>
				<div class="one half padded">
				<h2 class="login">Login to Your Account</h2>
				<form class="code" action="/" method="post">
					<fieldset class="center">
						<input type="text" name="lEmail" placeholder="Enter Email">
						<input type="text" name="code" placeholder="Enter Code">
						<button>Login</button>
					</fieldset>
				</form>
				</div>
			</div>
		</main>
